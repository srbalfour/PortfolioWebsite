@page
@model Website.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Me";
}

<div class="text-center">
    <h2>@ViewData["Title"]</h2>

    <p style="font-size:25px">Please feel free to contact me, I will try to respond as soon as I can.</p>

</div>

<div class="contact-form" style="background-color: rgba(255, 255, 255, 0.6); border-radius: 25px; padding-top: 40px; ">

    <div class="text=boxes" style="width:90%; text-align:center; margin:auto; font-size:25px; color: rgba(0, 0, 0, 0.6)">

        <form method="post">
        <fieldset>
                <div class="form-group">
                    <input type="text" class="form-control" value="" id="name" placeholder="Enter Your Name" style="width: 100%; border-radius: 5px; border: solid 3px #665BC2; font-size:25px; margin-bottom: 40px;" ;>
                </div>

                <div class="form-group">
                    <input type="email" class="form-control" value="" id="email" placeholder="Enter Your Email Address" style="width: 100%; border-radius: 5px; border: solid 3px #665BC2; font-size:25px; margin-bottom: 40px;" ;>
                </div>

                <div class="form-group">
                    <textarea class="form-control" id="message" rows="7" placeholder="Enter Your Message Here" style="width: 100%; border-radius: 5px; border: solid 3px #665BC2; font-size:25px; margin-bottom: 20px; "></textarea>
                </div>


                <button type="submit" class="btn btn-outline-light" style="border-radius: 5px; color: #665BC2; border: solid 3px #665BC2; font-weight:600; margin-bottom: 20px; ">Submit</button>
        
        </fieldset>
    </form>

    </div>

</div>
